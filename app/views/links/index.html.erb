<h1>Your links</h1>

<table>
  <tr>
    <th>Slug</th>
    <th>Target URL</th>
    <th>Created At</th>
  </tr>
  <% @links.each do |link| %>
    <tr>
      <td><%= link.slug %></td>
      <td><%= link.target_url %></td>
      <td><%= link.created_at %></td>
      <td><a href="<%= link_path(link.id) %>">Link Page</a></td>
      <td><a href="<%= edit_link_path(link.id) %>">Edit Link</a></td>
    </tr>
  <% end %>
</table>

<a href="<%= new_link_path %>">Shorten a link!</a>