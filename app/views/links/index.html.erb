<h1>Your links</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Slug</th>
    <th>Target URL</th>
    <th>Created At</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @links.each do |link| %>
    <tr>
      <td><a href="<%= link_path(link.id) %>"><button type="button" class="btn btn-primary"><%= link.slug %></button></a></td>
      <td><%= link.target_url %></td>
      <td><%= link.created_at %></td>
      <td><a href="<%= edit_link_path(link.id) %>"><button type="button" class="btn btn-info">Edit</button></a></td>
      <td><a data-confirm="Are you sure?" data-method="delete" href="<%= link_path(link.id) %>" rel="nofollow"><button type="button" class="btn btn-danger">Delete</button></a></td>
    </tr>
  <% end %>
</table>

<a href="<%= new_link_path %>"><button type="button" class="btn btn-success">Shorten a link!</button></a>